# API Configuration
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_SANDBOX=true

# Trading Configuration
TRADING_PAIR=BTC/USDT
BASE_CURRENCY=USDT
TRADE_AMOUNT=10
MAX_TRADES_PER_DAY=5

# Risk Management
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=3
MAX_POSITION_SIZE=100

# Position Sizing Strategy
# USE_FULL_BALANCE=true sẽ sử dụng toàn bộ tài sản cho mỗi lệnh (RỦI RO CAO!)
# USE_FULL_BALANCE=false sẽ sử dụng logic quản lý rủi ro thông thường (0.5% risk per trade)
USE_FULL_BALANCE=false

# AI Configuration - External AI Only
# Cấu hình để chỉ sử dụng External AI (Gemini, Claude, OpenAI)
AI_ADVISOR_ENABLED=true # Bật/tắt tính năng cố vấn AI
AI_PRIMARY_PROVIDER=external
AI_FALLBACK_PROVIDER=external
AI_AUTO_SWITCH=true # auto switch on error
AI_MAX_RETRIES=3
AI_HEALTH_CHECK_INTERVAL=300000 # 5 minutes
AI_COST_THRESHOLD=10.0 # USD per day
EXTERNAL_AI_SERVICE=gemini

# Common AI Settings (applied to all external providers)
AI_TIMEOUT=30000
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1000

# AI Provider API Keys
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id # optional

# AI Provider Models
GEMINI_MODEL=gemini-pro
CLAUDE_MODEL=claude-3-haiku-20240307
OPENAI_MODEL=gpt-3.5-turbo

# AI Provider Rate Limits (requests per minute)
GEMINI_RATE_LIMIT=60
CLAUDE_RATE_LIMIT=50
OPENAI_RATE_LIMIT=60

# Local AI Configuration
LOCAL_AI_MODEL_PATH=./models/trading_model.json
LOCAL_AI_WEIGHTS_PATH=./models/trading_weights.bin
LOCAL_AI_SCALER_PATH=./models/scaler_params.json
LOCAL_AI_TIMEOUT=10000

# Bot Settings  
TRADING_ENABLED=false
LOG_LEVEL=info
WEB_PORT=3000
WEB_DASHBOARD_ENABLED=true
WEBHOOK_URL=

# Market Analysis Configuration
MARKET_TIMEFRAME=1h  # Khung thời gian phân tích: 1m, 5m, 15m, 1h, 4h, 1d

# Database (Optional)
MONGO_URI=mongodb://localhost:27017/trading-bot