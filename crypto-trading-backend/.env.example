############################################
# Crypto Trading Backend - Env Example
############################################

# Environment Setup
NODE_ENV=development
HOST=localhost
PORT=3001
CORS_ORIGIN=*
LOG_LEVEL=debug

# Core Services
MONGODB_URI=mongodb://localhost:27017/crypto_bot

# Security
# 32-character key
MASTER_ENCRYPTION_KEY=12345678901234567890123456789012

# APIs
EXCHANGE_ID=binance
EXCHANGE_API_KEY=encrypted_api_key_placeholder
EXCHANGE_SECRET=encrypted_secret_placeholder

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash

# Trading Config
TRADING_MODE=PAPER
MAX_POSITIONS=3
RISK_PER_TRADE=0.02

# Performance & Logs
RATE_LIMIT_PER_MINUTE=60
